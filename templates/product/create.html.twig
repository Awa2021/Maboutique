{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_5_layout.html.twig' %}

{% block title %}CreateForm!
{% endblock %}

{% block body %}
	<div class="container mt-2">
		<div class="row">
			<div class="col-12 col-md-8 col-lg-6 mx-auto">
				{{form_start(form)}}
				{{form_row(form.title,{'attr': {'placeholder': "Titre de l'article"}})}}
				{{form_row(form.image,{'attr': {'placeholder': "Url de l'image"}})}}
				{{form_row(form.price,{'attr': {'placeholder': "le prix"}})}}
				<button type="submit" class="btn btn-primary">{{button_label|default('Enregistrer')}}</button>
				{{form_end(form)}}
			</div>
		</div>
	</div>


{% endblock %}