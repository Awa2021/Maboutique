{% extends 'base.html.twig' %}

{% block title %}Hello ProductController!{% endblock %}

{% block body %}

{% for message in app.flashes('success') %}
    <div class="alert alert-success" role="alert">{{ message }}</div>
{% endfor %}

<img src="upload\images\fondBoutique.png" class="img-fluid"alt="couverture" width="100%" height="" >
<div class="bg-light p-3">
    <h1>Les produits</h1>
</div>

<div class="row">
    {% for product in products %}
        <div class="col-4 mt-4">
            <div class="border border-dark rounded p-2 clearfix">
                <h2>
                    {{ product.title }}
                    -
                    {{ product.price }}
                    CFA
                </h2>
            <img class="img-fluid rounded" src="{{asset('upload/images/' ~ product.image) }}" alt="Image de {{ product.title }}">
           
            <hr>
                <a href="{{path('cart_add',{'id':product.id})}}" class="btn btn-success float-right">
                    <i class="fas fa-shopping-cart mr-1"></i>
                    Ajouter
                </a>
            </div>

        </div>
    {% endfor %}
</div>
{% endblock %}
